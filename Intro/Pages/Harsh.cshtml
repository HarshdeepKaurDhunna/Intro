@page
@model Intro.Pages.HarshModel
@{
    ViewData["Title"] = "Harsh";
}

<!-- Main Div -->
<div class="text-center mb-4">
    
    <h3 class="display-4">Hi, Harsh Here!!</h3>
<!-- Main Div End-->
</div>

   <!-- Form Tag -->
    <form  oninput="outputVal.value=parseInt(num1.value)+parseInt(num2.value)" >

        <div style = "margin: auto;" class="row col-lg-4">

             <input type="number" class = "form-control mb-4" id = "num1" placeholder="Enter Number 1"/>
                
             <input type="number" class = "form-control mb-4" id = "num2" placeholder="Enter Number 2"/>
               
            <p class = "h5 mb-4">Output for above input:  <output name="outputVal" for="num1 num2"></output></P>
                
            <button class="btn btn-info btn-block my-4">Submit</button>
                

        </div>  
    
        <!-- Form Row ENds -->
    </form>

   